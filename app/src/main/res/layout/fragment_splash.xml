<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/shape_splash"
             android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/splash_title_size"/>

    <include
        android:id="@+id/layout_error_splash"
        layout="@layout/error_screen"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/extra_big_padding"/>

</FrameLayout>
