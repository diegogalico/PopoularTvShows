<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp">

    <android.support.v7.widget.CardView android:id="@+id/card_view"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/card_height"
                                        android:layout_gravity="center"
                                        card_view:cardCornerRadius="@dimen/card_corner"
                                        card_view:cardElevation="@dimen/card_elevation">

        <ImageView
            android:id="@+id/image_view_item_tv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/shape_bottom"
            android:gravity="center"
            android:paddingBottom="@dimen/small_padding"
            android:paddingTop="@dimen/extra_big_padding"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_view_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@drawable/shape_top"
            android:gravity="right"
            android:paddingBottom="@dimen/big_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_show_average_size"/>
    </android.support.v7.widget.CardView>


</LinearLayout>