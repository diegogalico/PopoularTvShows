<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.letgo.populartvshows"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".app.PopularTvShowsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".presentation.ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.activities.SecondLevelActivity"/>
        <activity android:name=".presentation.ui.activities.PopularTvShowsActivity"/>
        <activity android:name=".presentation.ui.activities.TvShowDetailActivity"/>
    </application>
</manifest>
